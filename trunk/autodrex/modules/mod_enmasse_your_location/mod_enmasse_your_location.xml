<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
    <name>EnMasse Your Location</name>
    <version>1.5.0</version>
    <description>Show your location</description>
    <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
                <filename module="mod_enmasse_your_location">mod_enmasse_your_location.php</filename>
                <filename>index.html</filename>
                <filename>helper.php</filename>
                <folder>css</folder>
    </files>
    
    <params>
        <!-- parameter to allow placement of a module class suffix for the module table / xhtml display -->
         <param name="locationColor" type="text" default="" label="Location color" description="Color of location text" /> 
         <param name="changeColor" type="text" default="" label="Change City Color" description="Color of change city text" /> 
    </params>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
			  <field
					name="locationColor"
					type="text"
					label="Location color"
					description="Color of location test" />
					<field
					name="changeColor"
					type="text"
					label="Change City Color"
					description="Color of change city text" />
		    </fieldset>
		</fields>
	</config>

</install>